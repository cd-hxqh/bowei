<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_info_title_id"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_heiht_size"
    android:background="@color/title">

    <ImageView
        android:id="@+id/info_title_img_left"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_ico" />

    <TextView
        android:id="@+id/info_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/item_choose"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:text="@string/choose_item"
        android:textSize="14sp"
        android:background="@color/start_back_color"/>
</RelativeLayout>
